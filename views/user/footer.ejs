<% if (currentUser) { %>
<script type="text/ng-template" id="postjob">
    <h2><a href="">Post This Job</a></h2>
    <form ng-init="check(<%= currentUser.credit %>)">
      <div class="form">
        <h5>Duration <span>(Week)</span></h5>
        <input class="search-field" min='1' ng-click="check(<%= currentUser.credit %>)" type="number" ng-model="price"/>
      </div>
      <h6>Current Credit: <%= currentUser.credit %>.00 NGN</h6>
      <h6>Post Price: {{price*100 || 0}}.00 NGN</h6>
      <br>
      <h6><strong style="color: #FFA726;">{{message}}</strong></h6>
      <button class="send" ng-click="postjob(<%= currentUser.credit %>)">{{button}}</button>
    </form>
</script> 

<script type="text/ng-template" id="getGradit">
    <h2><a href="">Get Credit</a></h2>
    <form name="payForm" ng-submit="pay(payForm.$valid)" required novalidate>
      <div class="form">
        <h5>Amount <span>(NGN)</span></h5>
        <input class="search-field" only-num min='100' name="value" ng-click="clear()" type="number" ng-model="value" required />
      </div>
      <br>
      <button type="submit" ng-cloak class="error ng-cloak button">{{button}}</button>
      <span ng-cloak class="error ng-cloak" ng-show="formError">{{formError}}</span>
    </form>
</script> 

<script type="text/ng-template" id="postresume">
    <h2><a href="">Post This Resume</a></h2>
    <form ng-init="check(<%= currentUser.credit %>)">
      <div class="form">
        <h5>Duration <span>(Week)</span></h5>
        <input class="search-field" min='1' ng-click="check(<%= currentUser.credit %>)" type="number" ng-model="price"/>
      </div>
      <h6>Current Credit: <%= currentUser.credit %>.00 NGN</h6>
      <h6>Post Price: {{price*100 || 0}}.00 NGN</h6>
      <br>
      <h6>{{message}}</h6>
      <button class="send" ng-click="postresume(<%= currentUser.credit %>)">{{button}}</button>
    </form>
</script> 
<% } %>
<script type="text/ng-template" id="forgetPassword">
    <h2><a href="">Forgot Password</a></h2>
    <form name="forgetForm" ng-submit="reset(forgetForm.$valid)" equired novalidate>
      <div class="form">
        <h5>Email Address</h5>
         <input type="email" name="email" ng-model="credentials.email" ng-click="clear()" required >
        <span  ng-cloak class="ng-cloak error" ng-if="submitted && forgetForm.email.$invalid">Enter a valid email</span>
      </div>
      
      <br>

      <span ng-cloak class="error ng-cloak" ng-show="formError">{{formError}}</span>
     
      <button type="submit" class="send">{{button}}</button>
      <br>
      <h5 ng-cloak class="success ng-cloak">
         {{formSuccess}}</span>
      </h5>
    </form>
</script> 
