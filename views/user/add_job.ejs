<% include header %>
<!-- Titlebar
================================================== -->
<div id="titlebar" class="single submit-page">
  <div class="container">

    <div class="sixteen columns">
      <h2><i class="fa fa-plus-circle"></i> Add Job</h2>
    </div>

  </div>
</div>


<!-- Content
================================================== -->
<div class="container"  ng-controller="addjobCtrl">
  
<form name="jobForm" ng-submit="create(jobForm.$valid)" required novalidate>
  <!-- Submit Page -->
  <div class="ten columns">
    <div class="submit-page">

      <!-- Notice -->
      <div class="notification notice closeable margin-bottom-40">
        <p>Posting a job on BossWorker will cost you a fee of 100 NGN per week! However, Make sure you post in the correct Location, Categories and Type.</p>
      </div>

      <!-- Title -->
      <div class="form">
        <h5>Job Title <span style="color: #EF6C00;">*</span></h5>
        <input class="search-field" ng-minlength="5" type="text" placeholder="Enter job title" name="title" ng-click="clear()" ng-model="job.title" required />
        <p ng-cloak class="ng-cloak help-block" ng-show="submitted && jobForm.title.$error.required" >Job title is required.</p>
        <p ng-cloak class="ng-cloak help-block"  ng-show="jobForm.title.$error.minlength" >Job title too short !</p>
      </div>
  
      <!-- Location -->
      <div class="form">
        <h5>Location <span style="color: #EF6C00;">*</span></h5>
        <select data-placeholder="Choose Categories" chosen="{width: '100%'}" name="location" ng-click="clear()" ng-model="job.location" required>
