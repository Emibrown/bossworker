<body>
<div id="wrapper">


<!-- Header
================================================== -->
<header class="<% if ( maintitle == 'home'){ %>transparent<% } %>  sticky-header full-width" ng-controller="homeCtrl">
<div class="container">
  <div class="sixteen columns">
  
    <!-- Logo -->
    <div id="logo">
    <% if ( maintitle == 'home'){ %>
          <h1><a href="/user"><img src="/images/bossworker1.png" alt="" /></a></h1>
    <% }else{%>
          <h1><a href="/user"><img src="/images/bossworker2.png" alt="" /></a></h1>
    <% }%>
    </div>
   

    <!-- Menu -->
    <nav id="navigation" class="menu">
     

<% if (currentUser){ %>

    <ul id="responsive" class="padding">

        <li><a id="<% if ( maintitle == 'candidate'){ %>current<% } %>" href="">For Candidates</a>
          <ul class="padding">
            <li><a href="/user/jobs">Browse Jobs</a></li>
            <li><a href="/user/add-freelance">Add Freelance</a></li>
            <li><a href="/user/manage-freelance">Manage Freelance</a></li>
          </ul>
        </li>

        <li><a id="<% if ( maintitle == 'employee'){ %>current<% } %>" href="">For Employers</a>
          <ul class="padding">
            <li><a href="/user/add-job">Add Job</a></li>
            <li><a href="/user/manage-jobs">Manage Jobs</a></li>
            <li><a href="/user/freelancers">Browse Freelancers</a></li>
          </ul>
        </li>

    <li><a id="<% if ( maintitle == 'blog'){ %>current<% } %>" href="/user/blog">Blog</a></li>

     <li><a id="<% if ( maintitle == 'profile'){ %>current<% } %>" href="">Account</a>
      <ul class="padding">
        <li><a href="/user/profile">Profile</a></li>
        <li><a href="/user/logout">Log out</a></li>
      </ul>
    </li>

     
   
      </ul>

     
    

         <ul class="float-right padding" >
            <li><a><i class="fa fa-user"></i> Hi <%= currentUser.firstname %> <%= currentUser.lastname %></a></li>
            <li><a  href="" ng-click="cradit()" ><i class="fa fa-money"></i> <%= currencyFormatter.format(currentUser.credit, {
  symbol: 'NGN',
  decimal: '.',
  thousand: ',',
  precision: 2,
  format: '%v %s' 
}) %></a></li>
            
        </ul>  

<% } else { %>
    <ul id="responsive" class="padding">

      <li><a id="<% if ( maintitle == 'candidate'){ %>current<% } %>" href="/user/jobs">Jobs</a></li>

      <li><a id="<% if ( maintitle == 'employee'){ %>current<% } %>" href="/user/freelancers">Freelancers</a></li>
          

      

        <li><a id="<% if ( maintitle == 'blog'){ %>current<% } %>" href="/user/blog">Blog</a></li>
      </ul>

     <ul class="float-right padding">
        <li><a href="/user/signup"><i class="fa fa-user"></i> Sign Up</a></li>
        <li><a href="/user/login"><i class="fa fa-lock"></i> Sign In</a></li>
    </ul>       
<% } %>
     

    </nav>

    <!-- Navigation -->
    <div id="mobile-navigation">
      <a href="#menu" class="menu-trigger"><i class="fa fa-reorder"></i> Menu</a>
    </div>

  </div>
</div>
</header>
