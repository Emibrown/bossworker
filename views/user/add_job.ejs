            <option value="Warehouse" >Warehouse</option>
            <option value="Welder">Welder</option>
            <option value="Writing" >Writing</option>
          </select>
           <p ng-cloak class="ng-cloak help-block" ng-show="submitted && jobForm.category.$error.required" >Job category is required.</p>
      </div>
      
     
  
      <!-- Description -->
      <div>
        <h5>About job  <span style="color: #EF6C00;">*</span></h5>
        <wysiwyg-edit  ng-click="clear()" content="job.aboutJob" config="editorConfig"></wysiwyg-edit>
      </div>
    
      <br>

      <div class="form">
        <h5>Payment Type <span style="color: #EF6C00;">*</span></h5>
        <select chosen="{width: '100%'}" name="paymentType" ng-model="job.paymentType" ng-change="check()" required>
          <option value="">Select payment type</option>
          <option value="Negotiable">Negotiable</option>
          <option value="Confidential">Confidential</option>
          <option value="Hour">Hourly</option>
          <option value="Day">Daily</option>
          <option value="Week">Weekly</option>
          <option value="Month">Monthly</option>
          <option value="Year">Yearly</option>
        </select>
          <p ng-cloak class="ng-cloak help-block" ng-show="submitted && jobForm.paymentType.$error.required" >Job payment Type is required.</p>
      </div>

      <!-- Min payment -->
      <div class="form" ng-if="job.paymentType != 'Confidential' && job.paymentType != 'Negotiable' && job.paymentType != null">
        <h5>Payment (NGN) <span style="color: #EF6C00;">*</span></h5>
        <input type="number" name="payment" placeholder="Enter amount in NGN" ng-model="job.payment" required>
         <p ng-cloak class="ng-cloak help-block" ng-show="submitted && jobForm.payment.$invalid" >Enter a valid amount.</p>
         <span ng-cloak class="ng-cloak" ng-hide="submitted && jobForm.payment.$invalid" >{{job.payment | currency:"":0}} NGN</span>
      </div>

    </div>
  </div>

  <div class="six columns">
    <div class="submit-page">

      <!-- Company Details -->
      <div class="divider"><h3>Company Details</h3></div>

      <!-- Company Name -->
      <div class="form">
        <h5>Company Name <span style="color: #EF6C00;">*</span></h5>
        <input type="text" placeholder="Enter the name of the company" ng-click="clear()" name="companyName" ng-model="job.comName" required>
         <p ng-cloak class="ng-cloak help-block" ng-show="submitted && jobForm.companyName.$error.required" >Company name is required.</p>
      </div>

      <!-- Website -->
      <div class="form">
        <h5>Website <span style="color: #8BC34A;">(optional)</span></h5>
        <input type="text" name="website" placeholder="e.g. http://www.bossworker.com" ng-model="job.comWebsite" ng-pattern="/https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,6}\b([-a-zA-Z0-9@:%_\+.~#?&//=]*)/">
        <p ng-cloak class="ng-cloak help-block" ng-show="jobForm.website.$error.pattern" >Enter a valid website</p>
      </div>

      <!-- Teagline -->
      <div class="form">
        <h5>Email <span style="color: #8BC34A;">(optional)</span></h5>
        <input type="email" name="email" placeholder="Enter company email" ng-model="job.comEmail">
        <p ng-cloak class="ng-cloak help-block" ng-show="jobForm.email.$invalid" >Enter a valid email.</p>
      </div>

       <!-- Teagline -->
      <div class="form">
        <h5>Address <span style="color: #8BC34A;">(optional)</span></h5>
        <input type="text" placeholder="Enter company address" ng-model="job.comAddress">
      </div>

       <!-- Phone -->
      <div class="form">
        <h5>Phone Number <span style="color: #8BC34A;">(optional)</span></h5>
        <input class="search-field"  type="text" name="phone" placeholder="e.g. 080XXXXXXX or +23470XXXXXXX" ng-click="clear()" ng-pattern="/[7-9][0-9]{9}$/" ng-model="job.comPhone" />
        <p ng-cloak class="ng-cloak help-block" ng-show="jobForm.phone.$error.pattern" >Enter a valid phone number</p>
      </div>

       <!-- Logo -->
      <div class="form">
        <h5>Logo <span style="color: #8BC34A;">(optional)</span></h5>
        <label class="upload-btn">
            <input type="file" ngf-select ng-model="job.file" name="file"  
             accept="image/*" ngf-max-size="2MB"
             ngf-model-invalid="errorFile" ngf-resize="{width: 100, height: 100, quality: 0.5, centerCrop: true, restoreExif: false}">
            <i class="fa fa-upload"></i> Browse
        </label>
        <span ng-cloak class="ng-cloak fake-input">{{job.file.$ngfName || "No file selected" }}</span>
      </div>
       <i ng-cloak class="ng-cloak button" ng-show="jobForm.file.$error.maxSize">File too large 
       {{errorFile.size / 1000000|number:1}}MB: max 2MB</i>
       <img ng-show="jobForm.file.$valid" ngf-thumbnail="job.file" class="thumb"> 
       <a href="" ng-cloak class="ng-cloak fake-input button" ng-click="job.file = null" ng-show="job.file">Remove</a>


    </div>
  </div>

  <div class="sixteen columns">
    <div class="submit-page">

     <div class="divider margin-top-0"></div>

      <button type="Submit" ng-cloak class="button ng-cloak  big margin-top-5">{{login}}  <i class="fa fa-arrow-circle-right"></i>
      </button>
      <span ng-cloak class="error ng-cloak" ng-show="formError">{{formError}}</span>
      <span ng-cloak class="success ng-cloak" ng-show="formSuccess">{{formSuccess}}</span>

     </div>
   </div>

</form>

</div>
