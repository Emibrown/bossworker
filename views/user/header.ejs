<!-- Basic Page Needs
================================================== -->
<meta charset="utf-8">
<title><%= title %> | Bossworker</title>

<!-- Mobile Specific Metas
================================================== -->
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<meta name="description=" content="Find jobs and freelancers on Bossworker - Nigeria largest online platform where job-seekers, employers and freelancers meet!" >

<% if( pageTitle == 'post'){ %>

  <!-- facebook share
================================================== -->
<meta property="og:url" content="https://www.bossworker.com/user/blog/<%= post.postId %>" />
<meta property="og:type" content="article" />
<meta property="og:title" content="<%= post.subject %>" />
<meta property="og:description" content="<%- striptags(post.body).substring(0,200) %>..." />
<meta property="og:image"  content="https://www.bossworker.com/upload/file/<%= post.cover %>" />
<meta property="og:image:width"  content="840" />
<meta property="og:image:height"  content="430" />
<meta property="fb:app_id"  content="398004183989233" />

<!-- google+ share
================================================== -->
<meta itemprop="og:headline" content="<%= post.subject %>" />
<meta itemprop="og:description" content="<%- striptags(post.body).substring(0,200) %>..." />

<%}%>

<% if( pageTitle == 'job'){ %>

  <!-- facebook share
================================================== -->
<meta property="og:url" content="https://www.bossworker.com/user/jobs/<%- job.jobId %>/<%= job.jobTitle.replace(/ /g, '-') %>" />
<meta property="og:type" content="article" />
<meta property="og:title" content="<%= job.jobTitle %> - <%= job.companyName %> " />
<meta property="og:description" content="<%- striptags(job.aboutJob).substring(0,200) %>..." />
<meta property="og:image"  content="https://www.bossworker.com/images/job-cover.jpeg" />
<meta property="og:image:width"  content="840" />
<meta property="og:image:height"  content="430" />
<meta property="fb:app_id"  content="398004183989233" />


<!-- google+ share
================================================== -->
<meta itemprop="og:headline" content="<%= job.jobTitle %> - <%= job.companyName %>" />
<meta itemprop="og:description" content="<%- striptags(job.aboutJob).substring(0,200) %>..." />

<%}%>

